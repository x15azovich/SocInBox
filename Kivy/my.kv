WindowManager:
	MainWindow:
	PatchingWindow:
    NetworkWindow:
    ScanningWindow:
    HostbaseWindow:

<MainWindow>:
    name: "main"

    GridLayout:
        cols:1
        GridLayout:
            size_hint:1,.2
			cols:5
			Button:
				text: "Home"
				on_release:
            		app.root.current = "main"

        	Button:
				text: "Patching"
            	on_release:
            		app.root.current = "patching"
        	Button:
            	text: "Network"
            	on_release:
                	app.root.current = "network"
			Button:
            	text: "Scanning"
            	on_release:
					app.root.current = "scanning"
        	Button:
            	text: "Hostbase"
            	on_release:
                	app.root.current = "hostbase"

        GridLayout:
            cols: 2

            Label:
                text: "Password: "

            TextInput:
                id: passw
                multiline: False

        Button:
            text: "Submit"
            on_release:
                app.root.current = "second" if passw.text == "tim" else "main"
                root.manager.transition.direction = "left"


