WindowManager:
    MainWindow:
    PatchingWindow:
    NetworkWindow:
    ScanningWindow:
    HostbaseWindow:

<MainWindow>:
    name: "main"

    GridLayout:
        cols:1
        GridLayout:
            cols:4
            Button:
                text: "Patching"
                on_release:
                    app.root.current = "patching"
            Button:
                text: "Network"
                on_release:
                    app.root.current = "network"
            Button:
                text: "Scanning"
                on_release:
                    app.root.current = "scanning"
            Button:
                text: "Hostbase"
                on_release:
                    app.root.current = "hostbase"

        GridLayout:
            cols: 2

            Label:
                text: "Password: "

            TextInput:
                id: passw
                multiline: False

        Button:
            text: "Submit"
            on_release:
                app.root.current = "second" if passw.text == "tim" else "main"
                root.manager.transition.direction = "left"


