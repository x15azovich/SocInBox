<NetworkWindow>:
    name: "network"
    display1: entry1
    display2: entry2

    FloatLayout:
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.10, 'top': 1}
            background_color: utils.get_color_from_hex('#99ccff')
			text: "Home"
			on_release:
            	app.root.current = "main"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.30, 'top': 1}
            background_color: utils.get_color_from_hex('#4da6ff')
			text: "Patching"
			on_release:
            	app.root.current = "patching"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.50, 'top': 1}
            background_color: utils.get_color_from_hex('#001a33')
			text: "Network"
			on_release:
            	app.root.current = "network"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.70, 'top': 1}
            background_color: utils.get_color_from_hex('#0059b3')
			text: "Scanning"
			on_release:
            	app.root.current = "scanning"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.90, 'top': 1}
            background_color: utils.get_color_from_hex('#004080')
			text: "Hostbase"
			on_release:
            	app.root.current = "hostbase"

        TextInput:
            size_hint: 0.70,0.075
            pos_hint : {'center_x' : 0.40, 'top': .80}
            hint_text : "Enter IP or Hostname to Block:"
            id: entry1
            font_size: 32
            multiline: False
        Button:
            size_hint: 0.1, 0.075
            pos_hint : {'center_x' : 0.85, 'top': .80}
            background_color: utils.get_color_from_hex('#0080ff')
            text: "Block IP"
            on_press: root.press_block(entry1.text)

        TextInput:
            size_hint: 0.70,0.075
            pos_hint : {'center_x' : 0.40, 'top': .60}
            hint_text : "Enter IP or Hostname to UnBlock:"
            id: entry2
            font_size: 32
            multiline: False
        Button:
            size_hint: 0.1, 0.075
            pos_hint : {'center_x' : 0.85, 'top': .60}
            background_color: utils.get_color_from_hex('#0080ff')
            text: "UnBlock IP"
            on_press: root.press_remove(entry2.text)

