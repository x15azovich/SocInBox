#:import utils kivy.utils
 
#:kivy 1.0

#:import get_color_from_hex kivy.utils.get_color_from_hex

WindowManager:
	MainWindow:
	PatchingWindow:
    NetworkWindow:
    ScanningWindow:
    HostbaseWindow:


<MainWindow>:
    name: "main"
    FloatLayout:
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.10, 'top': 1}
            background_color: utils.get_color_from_hex('#001a33')
			text: "Home"
			on_release:
            	app.root.current = "main"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.30, 'top': 1}
            background_color: utils.get_color_from_hex('#4da6ff')
			text: "Patching"
			on_release:
            	app.root.current = "patching"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.50, 'top': 1}
            background_color: utils.get_color_from_hex('#0080ff')
			text: "Network"
			on_release:
            	app.root.current = "network"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.70, 'top': 1}
            background_color: utils.get_color_from_hex('#0059b3')
			text: "Scanning"
			on_release:
            	app.root.current = "scanning"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.90, 'top': 1}
            background_color: utils.get_color_from_hex('#004080')
			text: "Hostbase"
			on_release:
            	app.root.current = "hostbase"
 



<PatchingWindow>:
    name: "patching"

    FloatLayout:
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.10, 'top': 1}
            background_color: utils.get_color_from_hex('#99ccff')
			text: "Home"
			on_release:
            	app.root.current = "main"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.30, 'top': 1}
            background_color: utils.get_color_from_hex('#001a33')
			text: "Patching"
			on_release:
            	app.root.current = "patching"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.50, 'top': 1}
            background_color: utils.get_color_from_hex('#0080ff')
			text: "Network"
			on_release:
            	app.root.current = "network"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.70, 'top': 1}
            background_color: utils.get_color_from_hex('#0059b3')
			text: "Scanning"
			on_release:
            	app.root.current = "scanning"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.90, 'top': 1}
            background_color: utils.get_color_from_hex('#004080')
			text: "Hostbase"
			on_release:
            	app.root.current = "hostbase"
        
        RecycleView:
            viewclass: 'CustomLabel'
            id: table_floor
            RecycleGridLayout:
                id: table_floor_layout
                cols: 5
                height: self.minimum_height
                spacing: 5

        Button:
            size_hint: 0.1, 0.075
            pos_hint : {'center_x' : 0.85, 'top': .80}
            background_color: utils.get_color_from_hex('#0080ff')
            text: "Load Patch"
            on_press: root.load_patches()

                
<CustomLabel@Label>:
    bcolor: (1,1,1,1)
    canvas.before:
        Color:
            rgba: root.bcolor
        Rectangle:
            size: self.size
            pos: self.pos

<NetworkWindow>:
    name: "network"

    FloatLayout:
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.10, 'top': 1}
            background_color: utils.get_color_from_hex('#99ccff')
			text: "Home"
			on_release:
            	app.root.current = "main"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.30, 'top': 1}
            background_color: utils.get_color_from_hex('#4da6ff')
			text: "Patching"
			on_release:
            	app.root.current = "patching"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.50, 'top': 1}
            background_color: utils.get_color_from_hex('#001a33')
			text: "Network"
			on_release:
            	app.root.current = "network"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.70, 'top': 1}
            background_color: utils.get_color_from_hex('#0059b3')
			text: "Scanning"
			on_release:
            	app.root.current = "scanning"
		Button:
            size_hint: 0.2,0.10
            pos_hint : {'center_x' : 0.90, 'top': 1}
            background_color: utils.get_color_from_hex('#004080')
			text: "Hostbase"
			on_release:
            	app.root.current = "hostbase"

        TextInput:
            size_hint: 0.70,0.075
            pos_hint : {'center_x' : 0.40, 'top': .80}
            hint_text : "Enter IP or Hostname to Block:"
            id: entry
            font_size: 32
            multiline: False
        Button:
            size_hint: 0.1, 0.075
            pos_hint : {'center_x' : 0.85, 'top': .80}
            background_color: utils.get_color_from_hex('#0080ff')
            text: "Block IP"
            on_press: root.press_block(entry.text)

        TextInput:
            size_hint: 0.70,0.075
            pos_hint : {'center_x' : 0.40, 'top': .60}
            hint_text : "Enter IP or Hostname to UnBlock:"
            id: entry
            font_size: 32
            multiline: False
        Button:
            size_hint: 0.1, 0.075
            pos_hint : {'center_x' : 0.85, 'top': .60}
            background_color: utils.get_color_from_hex('#0080ff')
            text: "UnBlock IP"
            on_press: root.press_remove(entry.text)

